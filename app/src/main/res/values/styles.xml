<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Logo -->
    <style name="Text_Logo_Min">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:text">MyList</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Search -->
    <style name="Search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="drawableSize">10dp</item>
        <item name="android:hint">Search</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- EditText -->
    <style name="Edit_Form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/container_user</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <!-- Button -->
    <style name="Button_Form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_form</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>